#include <iostream>
using namespace std;

int main() {
    int mat[10][10], sparse[20][3];
    int r, c, k = 1;

    cout << "Enter rows and columns: ";
    cin >> r >> c;

    cout << "Enter matrix:\n";
    for (int i = 0; i < r; i++)
        for (int j = 0; j < c; j++)
            cin >> mat[i][j];

    sparse[0][0] = r;
    sparse[0][1] = c;
    sparse[0][2] = 0;

    for (int i = 0; i < r; i++) {
        for (int j = 0; j < c; j++) {
            if (mat[i][j] != 0) {
                sparse[k][0] = i;
                sparse[k][1] = j;
                sparse[k][2] = mat[i][j];
                k++;
                sparse[0][2]++;
            }
        }
    }

    cout << "\n3-Tuple Representation:\n";
    for (int i = 0; i <= sparse[0][2]; i++)
        cout << sparse[i][0] << " "
             << sparse[i][1] << " "
             << sparse[i][2] << endl;

    return 0;
}
