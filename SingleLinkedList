#include <stdio.h>
#include <stdlib.h>
/* Node structure */
struct node {
int data;
struct node *next;
};
/* Insert at beginning */
struct node* insert_begin(struct node *start, int item) {
struct node *temp;
temp = (struct node*)malloc(sizeof(struct node));
temp->data = item;
temp->next = start;
start = temp;
return start;
}
/* Insert at end */
struct node* insert_end(struct node *start, int item) {
struct node *temp, *curr;
temp = (struct node*)malloc(sizeof(struct node));
temp->data = item;
temp->next = NULL;
if (start == NULL)
return temp;
curr = start;
while (curr->next != NULL)
curr = curr->next;
curr->next = temp;
return start;
}
/* Delete a node */
struct node* delete_node(struct node *start, int key) {
struct node *curr, *prev;
curr = start;
prev = NULL;
if (curr != NULL && curr->data == key) {
start = curr->next;
free(curr);
return start;
}
while (curr != NULL && curr->data != key) {
prev = curr;
curr = curr->next;
}
if (curr == NULL) {
printf("Element not found\n");
return start;
}
prev->next = curr->next;
free(curr);
return start;
}
/* Search element */
int search(struct node *start, int key) {
struct node *curr = start;
while (curr != NULL) {
if (curr->data == key)
return 1;
curr = curr->next;
}
return 0;
}
/* Count nodes */
int count_nodes(struct node *start) {
int count = 0;
struct node *curr = start;
while (curr != NULL) {
count++;
curr = curr->next;
}
return count;
}
/* Display list */
void display(struct node *start) {
struct node *curr = start;
while (curr != NULL) {
printf("%d -> ", curr->data);
curr = curr->next;
}
printf("NULL\n");
}
/* -------- MAIN FUNCTION -------- */
int main() {
struct node *start = NULL;
start = insert_end(start, 10);
start = insert_end(start, 20);
start = insert_end(start, 30);
start = insert_begin(start, 5);
printf("Linked List:\n");
display(start);
printf("Search 20: %d\n", search(start, 20));
printf("Total nodes: %d\n", count_nodes(start));
start = delete_node(start, 20);
printf("After deleting 20:\n");
display(start);
return 0;
}
Output:
Original List:
10 -> 20 -> 30 -> 40 -> NULL
Reversed List:
40 -> 30 -> 20 -> 10 -> NULL


=== Code Execution Successful ===
